<svg style="width:100%;height:100%;position:fixed;top:0;left:0;bottom:0;right:0;" ng-controller="IndexController" transporter-map map-margin="50">
  <city ng-repeat="city in level.cities" />

  <g ng-repeat="player in level.players">
    <truck ng-repeat="truck in player.trucks" />
  </g>

  <line ng-repeat="route in level.routes"
    ng-attr-x1="{{route.start|screenCoordinateX}}" ng-attr-y1="{{route.start|screenCoordinateY}}"
    ng-attr-x2="{{route.target|screenCoordinateX}}" ng-attr-y2="{{route.target|screenCoordinateY}}"
    stroke="black" stroke-width="4" />

</svg>
